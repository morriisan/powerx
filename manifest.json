{
  "manifest_version": 3,
  "name": "Twitter Join Date Viewer",
  "version": "1.0",
  "description": "Shows account creation dates on tweets",
  "permissions": [],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["interceptor.js"],
    "matches": ["https://twitter.com/*", "https://x.com/*"]
  }],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
