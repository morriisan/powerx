{
  "manifest_version": 3,
  "name": "Account Creation Date Viewer",
  "version": "1.0",
  "description": "Shows account creation dates next to post timestamps",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.x.com/*"
      ],
      "js": ["content.js"]
    }
  ]

} 